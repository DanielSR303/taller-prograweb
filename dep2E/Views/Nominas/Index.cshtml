@model IEnumerable<dep2E.Models.Nomina>

@{
    ViewBag.Title = "Nominas";
}

<h2>Lista de Nominas</h2>

<p>
    @Html.ActionLink("Crea nueva", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Buscar Nominas por fecha", "BuscarNominaPorFecha", "Nominas", null, new { @class = "btn btn-default" })
</p>
@{
    int i = 1;
}

<table class="table">
    @if (Model.Count() != 0)
    {
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado.nombre_Empleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dias_trabajados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sueldo_por_dia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sueldo_quincenal)
            </th>
            <th>Opciones</th>
        </tr>
        foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleado.nombre_Empleado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dias_trabajados)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sueldo_por_dia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sueldo_quincenal)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idNomina }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Detalle", "Details", new { id = item.idNomina }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idNomina }, new { @class = "btn btn-warning" })
                </td>
            </tr>
            i++;
        }
    }
    else
    {
        <tr>
            <td colspan="3" align="center"><h5>No hay Nominas registrados</h5></td>
        </tr>
    }
</table>
@Html.ActionLink("Regresar a inicio", "Index", "Home")
