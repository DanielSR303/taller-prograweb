@model IEnumerable<dep2E.Models.Departamento>

@{
    ViewBag.Title = "Departamentos";
}

<h2>Lista de Departamentos</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create", null, new { @class = "btn btn-primary" })
</p>
@{
    int i = 1;
}

<table class="table">
    @if (Model.Count() != 0)
    {
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.nombre_Departamento)
            </th>
            <th>Opciones</th>
        </tr>
        foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre_Departamento)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idDepartamento }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Detalle", "Details", new { id = item.idDepartamento }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idDepartamento }, new { @class = "btn btn-warning" })
                </td>
            </tr>
            i++;
        }
    }
    else
    {
        <tr>
            <td colspan="3" align="center"><h5>No hay Departamentos registrados</h5></td>
        </tr>
    }
</table>
@Html.ActionLink("Regresar a inicio", "Index", "Home")
